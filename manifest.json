{
  "manifest_version": 3,
  "name": "Bookmark & History Search",
  "version": "1.1.0",
  "description": "Search through your bookmarks and browsing history",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_title": "Search Bookmarks & History"
  },
  "permissions": [
    "bookmarks",
    "history",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/modal.js",
        "scripts/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}